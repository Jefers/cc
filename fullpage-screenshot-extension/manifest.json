{
  "manifest_version": 3,
  "name": "Full Page Screenshot",
  "description": "Capture a full-page screenshot and save it as PNG.",
  "version": "1.1.0",
  "permissions": [
    "tabs",
    "scripting",
    "downloads",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
